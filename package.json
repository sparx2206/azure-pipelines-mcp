{
  "name": "azure-pipelines-mcp",
  "version": "0.1.4",
  "description": "MCP server for Azure Pipelines YAML authoring assistance â€” validation, task reference, expressions, variables, and schema",
  "type": "module",
  "bin": {
    "azure-pipelines-mcp": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
